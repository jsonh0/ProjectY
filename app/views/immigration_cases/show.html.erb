<div class="d-flex">
  <div class="col-md-10 offset-md-1">

    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
      <label class="form-check-label" for="flexSwitchCheckDefault" id="toggleLabel">Toggle Profile</label>
    </div>

    <div id="profile" class="page-content">
      <!-- Cases page -->
      <div class="d-flex justify-content-between align-items-baseline">
        <h1><%= @immigration_case.case_type %>'s Cases</h1>
      </div>

      <hr>
      <h4>hiiiiiiii</h4>
    </div>

    <div id="cases" class="page-content" style="display: none;">
      <!-- Profile page with details -->
      <h1><%= @immigration_case.case_type %>'s Profile</h1>
    
      <h4>byeeee</h4>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('#flexSwitchCheckDefault').change(function () {
      if (this.checked) {
        $('#profile').hide();
        $('#cases').show();
        $('#toggleLabel').text('Toggle Cases');
      } else {
        $('#profile').show();
        $('#cases').hide();
        $('#toggleLabel').text('Toggle Profile');
      }
    });
  });
</script>

<div>
  <%= link_to "Edit this immigration case", edit_immigration_case_path(@immigration_case) %> |
  <%= link_to "Back to immigration cases", immigration_cases_path %>

  <%= button_to "Destroy this immigration case", @immigration_case, method: :delete %>
</div>

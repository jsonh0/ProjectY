<div class="container">
  <div class="row">
    <div class="col-md-12">
      <!-- Empty column, can be used for additional content -->
    </div>
  </div>

  <div class="row">
    <div class="offset-md-3 col-md-6">
      <div class="card mb-3">
        <h5 class="card-header" style="background-color: #5907A2; color: #FF7102;">
          User Sign Up
        </h5>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="card-body">
            <form class="mb-3" id="new_user" novalidate="novalidate" action="/users" accept-charset="UTF-8" method="post">
              <input type="hidden" name="authenticity_token" value="YVazayRNKTKs1yLI/BlpEzO8Xo54BKM2p64OZwZ1rHJOgewUjOIYedRzlglBOc6pS4EDRVARKk03bPuFIWCIPw==">

              <div class="form-group">
                <%= f.input :username,
       
                  autofocus: true,
                  input_html: { autocomplete: "username", class: "form-control" } %>
              </div>

              <div class="form-group">
                <%= f.input :email,
         
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control" } %>
              </div>

              <div class="form-group">
                <%= f.input :password,
              
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-control" } %>
              </div>

              <div class="form-group">
                <%= f.input :password_confirmation,
             
                  input_html: { autocomplete: "new-password", class: "form-control" } %>
              </div>

              <div class="form-actions", style="padding-top: 10px">
  <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
</div>

              <hr>

              <a href="/users/sign_in">Log in</a><br>
            </form>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

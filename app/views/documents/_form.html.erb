<%= form_with(model: document, class: "needs-validation", novalidate: true) do |form| %>
  <% if document.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2 class="alert-heading"><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :immigration_case_id, value: immigration_case_id %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label", style: "display: block" %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :image, class: "form-label", style: "display: block" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :extracted_text, class: "form-label", style: "display: block" %>
    <%= form.text_field :extracted_text, class: "form-control" %>
  </div>

  <%= form.hidden_field :uploader_id, value: current_user.id %>

  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
